<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Women SOS Portal</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Quantum Alerts CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/quantum-alerts@1.0.3/dist/quantum-alerts.min.css">

    <!-- AOS CSS (Animate On Scroll) -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

    <style>
        body {
            background: #f4f4f9;
            font-family: Arial, sans-serif;
        }

        h1 {
            margin-top: 20px;
            text-align: center;
            font-weight: 700;
        }

        .form-container {
            max-width: 600px;
            margin: 40px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        #bg {
            background: url('https://s3-ap-south-1.amazonaws.com/soulveda-media-prod/wp-content/uploads/2021/03/19125008/1520432419.banner.Getting-real-about-womens-empowerment.jpg') no-repeat center center/cover;
            height: 62rem;
        }


        label {
            margin-top: 10px;
        }

        .form-control {
            margin-bottom: 15px;
        }

        button {
            margin-top: 20px;
        }
    </style>
</head>

<body id="bg">
<h1 data-aos="fade-down">Hey User!</h1>
<div class="container-fluid"><div class="form-container" data-aos="fade-up">
        <div class="alert alert-info quantum-alert quantum-alert-info" role="alert">
            Please fill out the form to sign up.
        </div>

        <form action="/signup" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="john doe" required>
            </div>

            <div class="mb-3">
                <label for="mobile_number" class="form-label">Mobile Number:</label>
                <input type="text" id="mobile_number" name="mobile_number" class="form-control" minlength="13" maxlength="13" placeholder="+91xxxxxxxxxxx" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="john@gmail.com" required>
            </div>

            <div class="mb-3">
                <label for="emergency_contact_number" class="form-label">Emergency Contact Number:</label>
                <input type="text" id="emergency_contact_number" name="emergency_contact_number" class="form-control" minlength="13" maxlength="13" placeholder="+91xxxxxxxxxx" required>
            </div>

            <div class="mb-3">
                <label for="aadhaar_card" class="form-label">Aadhaar Card:</label>
                <input type="text" id="aadhaar_card" name="aadhaar_card" class="form-control" minlength="12" maxlength="12" placeholder="xxxx-xxxx-xxxx" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" name="password" class="form-control" minlength="8" maxlength="8" placeholder="Enter 8-digit" required>
            </div>

            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
            <br>
            <button class="btn btn-primary w-100" type="submit" id="butn" onclick="loginpage()">Already a User?</button>
        </form>
    </div></div>


<script>

    function loginpage(){
        var btn= document.getElementById('butn');
        btn.onclick=window.location.href = "/login";}

</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<!-- Quantum Alerts JS -->
<script src="https://cdn.jsdelivr.net/npm/quantum-alerts@1.0.3/dist/quantum-alerts.min.js"></script>

<!-- AOS JS -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>

<script>
    AOS.init();
</script>
</body>

</html>
